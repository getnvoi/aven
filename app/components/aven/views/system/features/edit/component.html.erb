<div class="space-y-6">
  <div>
    <h1 class="text-3xl font-bold text-gray-900">Edit Feature</h1>
    <p class="mt-2 text-sm text-gray-700">Update feature details</p>
  </div>

  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <%= form_with model: feature, url: aven.system_feature_path(feature), method: :patch, class: "space-y-6" do |f| %>
        <% if feature.errors.any? %>
          <div class="rounded-md bg-red-50 p-4">
            <div class="flex">
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(feature.errors.count, "error") %> prohibited this feature from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% feature.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div>
          <%= f.label :name, "Name", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :editorial_title, "Editorial Title", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :editorial_title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :editorial_description, "Editorial Description", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_area :editorial_description, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :editorial_body, "Editorial Body", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_area :editorial_body, rows: 6, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :feature_type, "Feature Type", class: "block text-sm font-medium text-gray-700" %>
          <%= f.select :feature_type, [["Producer", "producer"], ["Core", "core"], ["Knowledge", "knowledge"], ["System", "system"]], {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <div class="flex items-center">
          <%= f.check_box :auto_activate, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
          <%= f.label :auto_activate, "Auto Activate", class: "ml-2 block text-sm text-gray-900" %>
        </div>

        <div class="flex justify-end space-x-3">
          <%= link_to "Cancel", aven.system_features_path, class: "inline-flex justify-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
          <%= f.submit "Save Changes", class: "inline-flex justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
