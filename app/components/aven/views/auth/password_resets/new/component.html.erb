<%= block("auth_card", title: "Reset your password", subtitle: "Enter your email address and we'll send you a link to reset your password.") do |card| %>
  <% if alert.present? %>
    <% card.with_alert do %>
      <%= ui("alert", variant: :error, message: alert) %>
    <% end %>
  <% end %>

  <%= form_tag(form_path, method: :post, class: "stack-6") do %>
    <%= ui("input-text", name: "email", label: "Email address", value: email,
        placeholder: "you@example.com", required: true, autocomplete: "email",
        data: { autofocus: true }) %>

    <%= ui("button", label: "Send reset link", type: "submit", full: true) %>
  <% end %>

  <% card.with_footer do %>
    <p class="text-center text-sm text-muted">
      Remember your password?
      <%= ui("link", label: "Sign in", href: login_path) %>
    </p>
  <% end %>
<% end %>
