<%= ui("auth_card", title: "Authentication Failed") do |card| %>
  <% card.with_alert do %>
    <%= ui("alert", variant: :error, message: error_message, title: error_class.present? ? "Error: #{error_class}" : nil) %>
  <% end %>

  <div class="stack-3">
    <% provider_links.each do |provider| %>
      <%= ui("button", label: "Try again with #{provider.to_s.capitalize}", href: oauth_path_for(provider), full: true) %>
    <% end %>

    <%= ui("button", label: "Back to home", href: home_path, variant: :outline, full: true) %>
  </div>
<% end %>
