<!DOCTYPE html>
<html>
  <head>
    <title>System Admin - Aven</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "aeno/tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "aven/tailwind", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags "aven/application", importmap: Aven.importmap %>
  </head>

  <body class="bg-gray-100">
    <div class="min-h-screen">
      <!-- Navigation -->
      <nav class="bg-white shadow-sm">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between h-16">
            <div class="flex">
              <div class="flex-shrink-0 flex items-center">
                <span class="text-xl font-bold text-gray-900">System Admin</span>
              </div>
              <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
                <%= link_to "Dashboard", aven.system_root_path, class: "inline-flex items-center px-1 pt-1 text-sm font-medium #{current_page?(aven.system_root_path) ? 'border-b-2 border-indigo-500 text-gray-900' : 'text-gray-500 hover:text-gray-700 hover:border-gray-300'}" %>
                <%= link_to "Activities", aven.system_activities_path, class: "inline-flex items-center px-1 pt-1 text-sm font-medium #{current_page?(aven.system_activities_path) ? 'border-b-2 border-indigo-500 text-gray-900' : 'text-gray-500 hover:text-gray-700 hover:border-gray-300'}" %>
                <%= link_to "Contacts", aven.system_contacts_path, class: "inline-flex items-center px-1 pt-1 text-sm font-medium #{current_page?(aven.system_contacts_path) ? 'border-b-2 border-indigo-500 text-gray-900' : 'text-gray-500 hover:text-gray-700 hover:border-gray-300'}" %>
                <%= link_to "Features", aven.system_features_path, class: "inline-flex items-center px-1 pt-1 text-sm font-medium #{current_page?(aven.system_features_path) ? 'border-b-2 border-indigo-500 text-gray-900' : 'text-gray-500 hover:text-gray-700 hover:border-gray-300'}" %>
                <%= link_to "Invites", aven.system_invites_path, class: "inline-flex items-center px-1 pt-1 text-sm font-medium #{current_page?(aven.system_invites_path) ? 'border-b-2 border-indigo-500 text-gray-900' : 'text-gray-500 hover:text-gray-700 hover:border-gray-300'}" %>
                <%= link_to "Users", aven.system_users_path, class: "inline-flex items-center px-1 pt-1 text-sm font-medium #{current_page?(aven.system_users_path) ? 'border-b-2 border-indigo-500 text-gray-900' : 'text-gray-500 hover:text-gray-700 hover:border-gray-300'}" %>
                <%= link_to "Workspaces", aven.system_workspaces_path, class: "inline-flex items-center px-1 pt-1 text-sm font-medium #{current_page?(aven.system_workspaces_path) ? 'border-b-2 border-indigo-500 text-gray-900' : 'text-gray-500 hover:text-gray-700 hover:border-gray-300'}" %>
              </div>
            </div>
            <div class="hidden sm:ml-6 sm:flex sm:items-center">
              <% if current_system_user %>
                <span class="text-sm text-gray-700 mr-4"><%= current_system_user.email %></span>
                <%= button_to "Logout", aven.system_logout_path, method: :delete, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
              <% end %>
            </div>
          </div>
        </div>
      </nav>

      <!-- Flash Messages -->
      <% if flash[:notice] %>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
          <div class="rounded-md bg-green-50 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <%= lucide_icon("check-circle", class: "h-5 w-5 text-green-400") %>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-green-800"><%= flash[:notice] %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
          <div class="rounded-md bg-red-50 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <%= lucide_icon("alert-circle", class: "h-5 w-5 text-red-400") %>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-red-800"><%= flash[:alert] %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Main Content -->
      <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <%= yield %>
      </main>
    </div>
  </body>
</html>
